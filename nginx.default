# nginx.default


include /etc/nginx/mime.types;

server {
    listen 8020;
    server_name example.org;

    location /static {
        root /tmp/app/openlxp-xss;
    }

    location / {
        proxy_pass http://app:8010;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
